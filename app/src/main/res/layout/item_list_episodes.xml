<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    android:layout_margin="@dimen/medium_margin"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_margin"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="15dp">


            <ImageView
                android:id="@+id/image_episode"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:contentDescription="@string/episode_image"
                android:scaleType="fitXY"
                />

        </android.support.v7.widget.CardView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:id="@+id/name_episode"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/medium_margin"
                android:textSize="@dimen/test_title_size"
                android:gravity="center"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_margin"
                android:paddingStart="@dimen/small_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:id="@+id/date_episode"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="@dimen/small_margin"
                    android:textSize="@dimen/test_normal_size"
                    android:gravity="start"
                    />

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:id="@+id/rating_episode"
                    android:paddingRight="@dimen/large_margin"
                    android:paddingEnd="@dimen/large_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:paddingStart="@dimen/small_margin"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/test_normal_size"
                    android:gravity="end"
                    />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:id="@+id/name_overview_episode"
            android:fontFamily="sans-serif-condensed"
            android:paddingRight="@dimen/small_margin"
            android:paddingEnd="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:paddingStart="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin"
            android:textSize="@dimen/test_normal_size"
            android:gravity="center"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>